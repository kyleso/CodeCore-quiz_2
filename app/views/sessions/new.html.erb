<div class="container">
  <div class="form-align">

    <%= form_with url: session_path, local: true do |f| %>
      <div class="form-group">
        <h4>Sign In</h4>
      </div>

      <div class="form-group">
        <%= f.label :email %> <br>
        <%= f.email_field :email, :size=>"40", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %> <br>
        <%= f.password_field :password, :size=>"40", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign In", class: "btn btn-outline-info" %>
      </div>
    <% end %>
  </div>
</div>