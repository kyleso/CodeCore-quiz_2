<%= form_with(model: @idea, local: true) do |f| %>

        <div class="form-group">
          <% if @idea.errors.present? %>
            <p>
              <%= @idea.errors.full_messages.join(", ") %>
            </p>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :title %> <br>
          <%= f.text_field :title, size: "85", class: "form-control" %>
        </div>

        <div class="form-group"> 
          <%= f.label :description %> <br>
          <%= f.text_area :description, size: "85", cols: 60, rows: 5, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-outline-info" %>
      </div>
  
    <% end %>